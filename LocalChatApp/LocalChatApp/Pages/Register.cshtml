@page
@model LocalChatApp.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<br />

<form method="post">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required />
    </div>
    <br />
    <div>
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required autocomplete="on" />
    </div>
    <br />
    <div>
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" required autocomplete="on" />
        <img id="maskShowPassword" onclick="toggleVisibility()" src="~/Images/Mask_password_icon.png" alt="Mask/Show Password" width="35px" />
    </div>
    <br />
    <div>
        <input type="submit" value="Register" />
    </div>
</form>

<br />

<p style="color:green">@Model.SuccessMessage</p>

<p style="color:red">@Model.ErrorMessage</p>

<script>
    let passwordInput = document.getElementById("password");
    let maskShowPasswordImg = document.getElementById("maskShowPassword");

    function toggleVisibility(event) {
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            maskShowPasswordImg.src = "/Images/Show_password_icon.png"
        }

        else if (passwordInput.type === "text") {
            passwordInput.type = "password";
            maskShowPasswordImg.src = "/Images/Mask_password_icon.png"
        }

        event.preventDefault();
    }
</script>